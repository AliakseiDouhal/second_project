
 .circle
  width: 180px
  height: 180px
  background: #f0f3f6
  border-radius: 180px

 .hexagon
   position: relative
   width: 115px
   border-radius: 8px 4px
   height: 66.40px
   background-color: white
   margin: 33.20px 0
   box-shadow: 0 0 15px rgba(0,0,0,0.6)


 .hexagon:before,
 .hexagon:after
   content: ""
   position: absolute
   z-index: 1
   width: 81.32px
   height: 81.32px
   -webkit-transform: scaleY(0.5774) rotate(-45deg)
   -ms-transform: scaleY(0.5774) rotate(-45deg)
   transform: scaleY(0.5774) rotate(-45deg)
   background-color: inherit
   left: 16.8414px
   box-shadow: 0 0 15px rgba(0,0,0,0.6)
   border-radius: 8px 4px

 .hexagon:before
   top: -40.6586px


 .hexagon:after
   bottom: -40.6586px


 /*cover up extra shadows*/
 .hexagon span
   display: block
   position: absolute
   top:0
   left: 0
   width:115px
   height:66.3953px
   z-index: 2
   border-radius: 8px 4px
   background: inherit