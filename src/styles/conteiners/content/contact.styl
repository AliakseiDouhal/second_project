.contact
  background url("/img/offer-bg.jpg") no-repeat center center
  background-size: cover
  padding: 145px 0 250px 0
  min-height 653px
  h2
    text-align:left !important
    padding-bottom 30px
    span
      display block
  p
    width: 50%
  form
    width: 75%
    padding-bottom: 10px
    .form-group
      width: 36%
    input
      width: 100% !important
    button
      width: 28%

.secure-text
  padding-left: 19px
  font-size: 0.875rem
  color: rgb(54, 174, 234)
  position relative

span.secure-text:before
  content: ""
  background: url(/img/locked.png)
  position: absolute
  height: 16px
  width: 14px
  top: 2px
  left: 0


@media only screen and (max-width: 600px)
  .contact
    padding-top 40px

    .waves
      margin auto

    h2
      text-align center !important

    form .form-group
      margin-bottom 10px
      width: 50%

    p
      width 100%

    .form-inline
      width 100%
      justify-content center

      button
        width 50%

