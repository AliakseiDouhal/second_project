.contact
  background url("/img/offer-bg.jpg") no-repeat center center
  padding: 73px 0 90px 0
  h2
    text-align:left !important
  p
    width: 50%
  form
    width: 75%
    padding-bottom: 10px
    .form-group
      width: 36%
    input
      width: 100% !important
    button
      width: 28%

.secure-text
  padding-left: 3px
  font-size: 0.875rem
  color: rgb(54, 174, 234)

@media only screen and (max-width: 600px)
  .contact

    .waves
      margin auto

    h2
      text-align center !important

    form .form-group
      margin-bottom 10px
      width: 50%

    p
      width 100%

    .form-inline
      width 100%
      justify-content center

      button
        width 50%

