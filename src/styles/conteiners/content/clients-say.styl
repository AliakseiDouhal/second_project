.clients-say
  background url("/img/footer-bg.jpg") center bottom no-repeat
  padding-top: 20px
  height: 1295px
  h2
    padding-bottom: 90px
  p
    color #c9c9c9

.quote:before
  height: 22px
  width: 24pxs
  content: url(/img/quote.png)
  margin-bottom: 11px

.half-size
  width 50%

.user
  font-size: 1rem
  color: rgb(54, 174, 234)
  line-height: 2.063
  padding-left 5px

  &--name
    font-weight: bold
  &--position
    font-weight normal

.contact-form
  margin-top 60px
  padding 10px
  border-radius: 8px
  background-color: rgba(255, 255, 255, 0.18)
  box-shadow: 0 5px 51px 0 rgba(0, 0, 0, 0.75)
  width: 515px
  height: 496px

  span
      text-align: center

  h2
    padding 10px 0
    font-size: 2.25rem
    color: rgb(54, 174, 234)
    line-height: 1.2

input.form-control
  height: 60px
  &:focus
    border-color: #777
    outline: 0
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777


