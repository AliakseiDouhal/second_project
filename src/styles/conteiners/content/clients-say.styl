.clients-say
  background url("/img/footer-bg.jpg") center bottom no-repeat
  padding-top: 72px
  min-height: 1295px
  background-size: cover

  & .col-md-6:first-child
    padding-bottom 30px

  h2
    padding-bottom: 82px
    span
      display block
  p
    color black

.quote:before
  height: 22px
  width: 24pxs
  content: url(/img/quote.png)
  margin-bottom: 11px

.half-size
  width 49%

.user
  font-size: 1rem
  color: rgb(54, 174, 234)
  line-height: 2.063
  padding-left 5px

  &--name
    font-weight: bold
  &--position
    font-weight normal

.contact-form
  margin-top 60px
  margin-bottom 20px
  padding 10px
  border-radius: 8px
  background-color: rgba(255, 255, 255, 0.18)
  box-shadow: 0 5px 51px 0 rgba(0, 0, 0, 0.75)
  max-width: 515px
  width 100%

  label
    display block
    margin 0

  span
      text-align: center

  h2
    padding 20px 0
    font-size: 2.25rem
    color: rgb(54, 174, 234)
    line-height: 1.2

  button
    margin: 0 20px 50px 20px
    width: calc(100% - 40px)

  .form-group
    padding 0 20px
    margin-bottom: 20px
    &:first-child
      margin-top 40px

input.form-control
  height: 60px
  &:focus
    border-color: #777
    outline: 0
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px #777

@media only screen and (max-width: 600px)
  .clients-say
    padding-top 40px

    h2
      padding-bottom 25px

    .half-size
      width 100%
      &:first-child
        padding-bottom 10px





