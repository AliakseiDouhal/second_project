.about-us
  background: #f6f4f4
  height: 667px
  position relative

  &:before
    content: " "
    background: url("/img/map_dotted.png") no-repeat center center
    background-size: contain
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

  &-text
    width: 22%
    p
      font-size: 1rem
      color: rgb(148, 148, 148)
      line-height: 1.857
      text-align: left

.img-block
  z-index 1
  position relative
  & img
    position absolute
    &:first-child
      max-width 600px
      top: -40px
      right: 0
    &:last-child
      top: 252px
      right: 343px