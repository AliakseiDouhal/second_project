/*!my*/
html
  font-size: 16px

body
  margin: 0
  font-family: OpenSansRegular
  font-weight: normal

h1,h2,h3,h4
  font-family: OpenSansBold
  text-align center
  position relative

li
  list-style none

.container
  max-width: 1162px
  margin: auto
  padding 0 10px
  height 100%

.wide-container
  max-width 1460px
  margin auto
  height 100%
  position relative

.flex-row-wrap
  flex-flow: row wrap

.flex-column-wrap
  flex-flow: column wrap

.flex-column
  flexColumn()

.flex-column-center
  flexColumn()
  justify-content: center

.row-space-between
  display flex
  justify-content space-between

.custom-button
  font-weight: 400
  border-width 0
  text-align: center
  white-space: nowrap
  vertical-align: middle
  user-select: none
  transition: background-color .4s ease-in-out, border-color .4s ease-in-out, box-shadow .4s ease-in-out, color .4s ease-in-out
  border-radius: 4px

  &--transparent
    border-width: 3px
    border-color: rgb(54, 174, 234)
    color: rgb(54, 174, 234)
    border-style: solid
    width: 147px
    height: 40px
    background none
    &:hover
      background-color: #36aeea
      color: white
    &:active
      color: white
      background-color: #28769e

  &--blue
    background-color: #36aeea
    color: white
    &:hover
      border-width: 3px
      background none
      border-color: rgb(54, 174, 234)
      color: rgb(54, 174, 234)
      border-style: solid
    &:active
      color: white
      background-color: #28769e

    &--middle
      width: 253px
      height: 60px

    &--small
      width: 130px
      height: 40px

    &--full-width
      width 100%
      height 70px
      font-size: 1rem
      font-weight: bold

.waves:before
  content ""
  background url("/img/wave.png") repeat-x
  width: 88px
  height: 7px
  position: absolute
  left: 0
  top: -40px

.full-width
  width: 100%

