/*!my*/
html
  font-size: 16px

body
  margin: 0
  font-family: OpenSansCondensedLight
  font-weight: normal

h1,h2,h3,h4
  font-family: OpenSansCondensedBold
  text-align center

.content
  max-width: 1440px
  margin: auto
  padding 0 20px
  height 100%

.flex-row-wrap
  flex-flow: row wrap

.flex-column-wrap
  flex-flow: column wrap

.flex-column
  flexColumn()

.flex-column-center
  flexColumn()
  justify-content: center

.row-space-between
  display flex
  justify-content space-between

.custom-button
  font-weight: 400
  border-width 0
  text-align: center
  white-space: nowrap
  vertical-align: middle
  user-select: none
  transition: background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out
  border-radius: 4px

  &--transparent
    border-width: 3px
    border-color: rgb(54, 174, 234)
    color: rgb(54, 174, 234)
    border-style: solid
    width: 147px
    height: 40px
    background none

  &--blue
    background-color: rgb(54, 174, 234)
    color: white

    &--middle
      width: 253px
      height: 60px

    &--small
      width: 130px
      height: 40px

    &--full-width
      width 100%
      height 70px
      font-size: 1rem
      font-weight: bold

.waves
  background url("/img/wave.png") repeat-x
  width: 88px
  height: 7px
  padding-bottom: 40px

.full-width
  width: 100%


